// Zed settings
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro",
    },
    "model_parameters": [],
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 14,
  "buffer_font_size": 16,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Matugen Dark",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "scrollbar": {
    "show": "never",
    "axes": {
      "vertical": true,
      "horizontal": false,
    },
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
  },
  "tab_bar": { "show": false },
  "project_panel": { "button": false },
  "outline_panel": { "button": false },
  "collaboration_panel": { "button": false },
  "notification_panel": { "button": false },
  "terminal": {
    "button": false,
    "copy_on_select": true,
    "dock": "left",
    "toolbar": {
      "breadcrumbs": false,
    },
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "wrap_guides": [80, 120],
  "preferred_line_length": 80,
  "soft_wrap": "editor_width",
  "gutter": {
    "runnables": false,
    "folds": false,
  },
  "line_indicator_format": "short",
  "active_pane_modifiers": {
    "inactive_opacity": 0.85,
  },
  "vim_mode": false,
  "auto_signature_help": false,
  "hover_popover_delay": 50,
  "scroll_sensitivity": 5,
  "restore_on_startup": "last_workspace",
  "lsp": {
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true,
            "forwardSearchAfter": true,
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": [
              "--synctex-forward",
              "%l:1:%f",
              "-x",
              "zed %%{input}:%%{line}",
              "%p",
            ],
          },
        },
      },
    },
  },
}
